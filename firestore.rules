rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Reserve a stable metadata envelope for server-managed data.
    // CRM docs remain flexible, but clients cannot write the reserved envelope.
    function hasNoReservedSystemEnvelope() {
      return !('sys' in request.resource.data);
    }

    function ownerCrud(userId) {
      return isOwner(userId) && hasNoReservedSystemEnvelope();
    }

    match /users/{userId} {
      // Keep root user document immutable from clients.
      allow read: if isOwner(userId);
      allow write: if false;

      // Canonical entitlement document (single source of truth, server-managed).
      match /entitlements/main {
        allow read: if isOwner(userId);
        allow write: if false;
      }

      // Deny every other entitlement document to avoid ambiguity/drift.
      match /entitlements/{entitlementId} {
        allow read, write: if false;
      }

      // Reserve additional server-managed namespaces for future tier/billing metadata.
      match /billing/{docId} {
        allow read, write: if false;
      }

      match /system/{docId} {
        allow read, write: if false;
      }

      // Tier 1 CRM namespace (current UX): full CRUD inside owner's account scope.
      match /contacts/{contactId} {
        allow read, create, update, delete: if ownerCrud(userId);
      }

      match /leads/{leadId} {
        allow read, create, update, delete: if ownerCrud(userId);
      }

      match /tasks/{taskId} {
        allow read, create, update, delete: if ownerCrud(userId);
      }

      match /notes/{noteId} {
        allow read, create, update, delete: if ownerCrud(userId);
      }

      match /promotionEvents/{promotionEventId} {
        allow read, create, update, delete: if ownerCrud(userId);
      }

      match /events/{eventId} {
        allow read, create, update, delete: if ownerCrud(userId);
      }

      match /promotions/{promotionId} {
        allow read, create, update, delete: if ownerCrud(userId);

        match /snapshots/{snapshotId} {
          allow read, create, update, delete: if ownerCrud(userId);
        }
      }

      // Settings are intentionally multi-document, but scoped to known keys to prevent sprawl.
      match /settings/{settingId} {
        allow read, create, update: if ownerCrud(userId)
          && settingId in ['pipeline', 'nightlyRollover', 'main'];
        allow delete: if false;
      }
    }
  }
}
